<h3> Create a New Address for <%= @student.name %></h3>

<%= form_for [@student, @address] do |f| %>
   <%= f.label :description %>
   <%= f.text_field :description %>

   <%= f.label :street %>
   <%= f.text_field :street %>

   <%= f.label :city %>
   <%= f.text_field :city %>

   <%= f.label :state %>
   <%= f.text_field :state %>

   <%= f.label :zip %>
   <%= f.text_field :zip %>

   <%= f.submit %>

   <% end %>

   <br><%= link_to "Back to #{@student.name}", student_path(@student)%>
   <br><%= link_to "Back to All Students", students_path %>
